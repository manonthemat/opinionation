<!-- Posts -->
<div class="posts container" data-ng-controller="PostCtrl">
  <h1>POSTS INDEX!</h1>
    
    <div class="post col half" ng-class="{flipped: post.flipState}" data-ng-repeat="post in posts">
      <div class="front" ng-click="flip(post)" >
        <div class="full-image" style="background-image: url({{post.post_pic}})"></div>
        <h1 class="title">{{ post.question }}</h1>
      </div>
      
      <div class="back clearfix">
        <span class="close-button" ng-click="flip()">x</span>
        <form ng-controller="FavCtrl as fav" ng-submit="fav.addFavorite(post.id)">
          <input type="submit" value="Favorite" class="">
        </form>
        <h2 class="title">{{ post.question }}</h2>
        <a href="#"><img ng-src="{{post.poster.profile_pic}}" class="poster-profile-pic"></a>
        <h3><a href="">{{ post.poster.username }}</a></h3>
        <a href="#" class="lightbox-photo"><img ng-src="{{post.post_pic}}" class="post-photo"></a>

        <form ng-controller="AnswerCtrl as answer" ng-submit="answer.addAnswer(post.id)">
          <input type="text" placeholder="Answer" class="answer-input" ng-model="body">
          <input type="submit" value="Send" class="answer-submit">
        </form>

        <div class="answers">
          <div class="answer clearfix" data-ng-repeat="answer in post.answers">
            <a href="#">
              <img data-ng-src="{{answer.user_pic}}" class="profile-pic">
            </a>
            <a href="#">{{ answer.username }}</a>
            <p class="answer-body">{{ answer.body }}</p>
            <span class="checkmark"></span>
          </div>
        </div> <!-- /.answers -->
      </div> <!-- /.back -->
    </div> <!-- /.post -->

  </div> <!-- /.posts -->



</div>